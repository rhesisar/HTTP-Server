---
BasedOnStyle: LLVM
Language: Cpp

UseTab: Always
IndentWidth: 4
TabWidth: 4

ColumnLimit: 80

DerivePointerAlignment: false
PointerAlignment: Right   # Request *req, not Request* req

# Functions: keep return type and name on the same line
BreakAfterReturnType: TopLevelDefinitions

# Enums: never on one line
AllowShortEnumsOnASingleLine: false

# Short things on one line / not
AllowShortIfStatementsOnASingleLine: Never
AllowShortLoopsOnASingleLine: false
AllowShortFunctionsOnASingleLine: Empty   # only `void f() {}` if body is empty

# Binary operators / long conditions
BreakBeforeBinaryOperators: NonAssignment
BreakBinaryOperations: RespectPrecedence

AlignOperands: Align

# Brace style
BreakBeforeBraces: Custom
BraceWrapping:
  AfterFunction: true
  AfterControlStatement: Never
  AfterEnum: false
  AfterStruct: false
  AfterUnion: false
  BeforeElse: false
  BeforeWhile: false
  IndentBraces: false
  SplitEmptyFunction: false

# Declarations / prototypes
AlignConsecutiveDeclarations: None
AlignConsecutiveAssignments: None
AlignConsecutiveMacros: None

# Misc spacing
SpaceBeforeParens: ControlStatements
SpaceAfterCStyleCast: false

ReflowComments: false
Cpp11BracedListStyle: false
BinPackArguments: false
